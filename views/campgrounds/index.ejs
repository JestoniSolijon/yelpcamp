<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>
<div class="m-5 text-center">
    <h1>All Campgrounds</h1>
</div>
<ul>
    <% for (let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (campground.images.length) { %>
                    <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                    <% } else { %>
                    <img class="img-fluid" src="https://res.cloudinary.com/dc58q0t5z/image/upload/v1683725422/YelpCamp/q32u6unwuvb6oogwdz8w.jpg" alt="">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title%></h5>
                        <p class="card-text"><%= campground.description%></p>
                        <p class="card-text-muted"><small><%= campground.location %></small></p>
                        <a class="btn btn-primary" href="/yelpcamp/campgrounds/<%=campground._id %>">View <%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</ul>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = '<%- JSON.stringify(campgrounds)%>';
</script>
<script src="/javascripts/clusterMap.js"></script>